<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #d2dae2;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.elite.controller.UserPageController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0"
              AnchorPane.topAnchor="20.0">

            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="10.0"
                  style="-fx-background-color: #00003EFF; -fx-background-radius: 5;">
                <Label style="-fx-text-fill: white; -fx-padding: 15;" text="User Management">
                    <font><Font name="System Bold" size="24.0"/></font>
                </Label>
            </HBox>

            <!-- Form Section -->
            <GridPane hgap="15" vgap="15"
                      style="-fx-padding: 20; -fx-background-color: rgba(216,216,255,0.88); -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="110.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="204.0" prefWidth="299.0" maxWidth="400.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="110.0" prefWidth="299.0" maxWidth="110.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"  prefWidth="341.0" maxWidth="400.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="35"/>
                    <RowConstraints minHeight="35"/>
                    <RowConstraints minHeight="35"/>
                    <RowConstraints minHeight="35"/>
                    <RowConstraints minHeight="35"/>
                </rowConstraints>

                <!-- User ID -->
                <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <Label fx:id="lblId" text="U001"
                       prefHeight="32.0" prefWidth="52.0"
                       style="-fx-border-color: #dcdde1; -fx-border-radius: 3; -fx-padding: 5;"
                       GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font><Font name="Segoe UI" size="14.0"/></font>
                </Label>

                <!-- User Name -->
                <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtUserName"
                           prefHeight="30.0" prefWidth="655.0"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Email -->
                <Label text="User Email:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtEmail"
                           prefHeight="30.0" prefWidth="655.0"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Role -->
                <Label text="Role:" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <ComboBox fx:id="cmbRole"
                          prefHeight="32.0" prefWidth="356.0"
                          style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                          GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <!-- Password -->
                <Label text="User Password:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtUserPassword"
                           prefHeight="30.0" prefWidth="655.0"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>

            <!-- Button Panel -->
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 0 10 0;">
                <Button fx:id="btnSave"   text="Save"   onAction="#btnUserSaveOnAction"
                        prefHeight="26.0" prefWidth="130.0"
                        style="-fx-background-color: #4cd137; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
                <Button fx:id="btnUpdate" text="Update" onAction="#btnUserUpdateOnAction"
                        prefWidth="130.0"
                        style="-fx-background-color: #0097e6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
                <Button fx:id="btnDelete" text="Delete" onAction="#btnUserDeleteOnAction"
                        prefWidth="130.0"
                        style="-fx-background-color: #e55039; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
                <Button fx:id="btnReset"  text="Reset"  onAction="#btnUserResetOnAction"
                        prefWidth="130.0"
                        style="-fx-background-color: #f6b93b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
            </HBox>

            <!-- Table Section -->
            <VBox spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <TableView fx:id="tblUser" onMouseClicked="#onClickTable"
                           prefHeight="73.0" prefWidth="860.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId"       text="User ID"        style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colName"     text="User Name"      style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colEmail"    text="User Email"     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colRole"     text="Role"           style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colPassword" text="User Password"  style="-fx-alignment: CENTER;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
