<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #d2dae2;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.elite.controller.PaymentPageController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

            <HBox alignment="CENTER_LEFT" spacing="10.0"
                  style="-fx-background-color: #00003E; -fx-background-radius: 5;">
                <Label style="-fx-text-fill: white; -fx-padding: 15;" text="Payment Management">
                    <font><Font name="System Bold" size="24.0"/></font>
                </Label>
            </HBox>

            <GridPane hgap="15" vgap="15"
                      style="-fx-padding: 20; -fx-background-color: rgba(216,216,255,0.88);
                             -fx-background-radius: 5;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <columnConstraints>
                    <ColumnConstraints minWidth="150.0"/>
                    <ColumnConstraints prefWidth="380.0" hgrow="ALWAYS"/>
                    <ColumnConstraints prefWidth="245.0" hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                </rowConstraints>

                <Label text="Payment ID:" GridPane.rowIndex="0"/>
                <Label fx:id="lblId" text="P001"
                       style="-fx-border-color: #dcdde1; -fx-border-radius: 3; -fx-padding: 5;"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Enrollment:" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cmbEnrollment"
                          style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                 -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Date:" GridPane.rowIndex="2"/>
                <DatePicker fx:id="dpDate"
                            style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                   -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Amount (LKR):" GridPane.rowIndex="3"/>
                <TextField fx:id="txtAmount"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                  -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Method:" GridPane.rowIndex="4"/>
                <ComboBox fx:id="cmbMethod"
                          style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                 -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                          GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Note:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <TextField fx:id="txtNote"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                  -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 0 10 0;">
                <Button fx:id="btnSave"   text="Save"   onAction="#btnPaymentSaveOnAction"
                        prefWidth="130.0" style="-fx-background-color: #4cd137; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
                <Button fx:id="btnUpdate" text="Update" onAction="#btnPaymentUpdateOnAction"
                        prefWidth="130.0" style="-fx-background-color: #0097e6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
                <Button fx:id="btnDelete" text="Delete" onAction="#btnPaymentDeleteOnAction"
                        prefWidth="130.0" style="-fx-background-color: #e55039; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
                <Button fx:id="btnReset"  text="Reset"  onAction="#btnPaymentResetOnAction"
                        prefWidth="130.0" style="-fx-background-color: #f6b93b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
            </HBox>

            <VBox spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 5;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <TableView fx:id="tblPayment" onMouseClicked="#onClickTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId"       text="Payment ID" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colStudent"  text="Student"    style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colCourse"   text="Course"     style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colDate"     text="Date"       style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colAmount"   text="Amount"     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colMethod"   text="Method"     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colNote"     text="Note"       style="-fx-alignment: CENTER_LEFT;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
