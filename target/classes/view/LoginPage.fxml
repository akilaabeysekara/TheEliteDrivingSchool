<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="ancMainContainer" prefHeight="1100.0" prefWidth="1500.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.elite.controller.LoginPageController">
    <children>
        <!-- Left branding panel -->
        <VBox alignment="CENTER" prefHeight="705.0" prefWidth="600.0"
              style="-fx-background-color: #000032;"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="lblSup1" prefHeight="53.0" prefWidth="358.0"
                       text="Welcome to" textAlignment="CENTER" textFill="YELLOW">
                    <font><Font name="Sarai" size="35.0"/></font>
                </Label>
                <ImageView fitHeight="354.0" fitWidth="353.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/EliteLogo.png"/>
                    </image>
                </ImageView>
            </children>
            <padding><Insets top="20.0"/></padding>
        </VBox>

        <!-- Right login panel -->
        <AnchorPane layoutX="600.0" prefHeight="705.0" prefWidth="752.0"
                    style="-fx-background-color: rgba(216,216,255,0.88);"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="600.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" layoutX="48.0" layoutY="-2.0"
                      prefHeight="600" prefWidth="400" spacing="15"
                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <Text style="-fx-fill: #000032;" text="Welcome">
                                    <font><Font size="64.0"/></font>
                                </Text>
                                <Text style="-fx-fill: grey;" text="Login with Username">
                                    <font><Font size="21.0"/></font>
                                </Text>
                            </children>
                        </VBox>

                        <VBox maxWidth="400.0" spacing="10">
                            <children>
                                <!-- Username -->
                                <TextField fx:id="usernameField" onKeyReleased="#onNext"
                                           prefHeight="50.0" prefWidth="300.0" promptText="Username"
                                           style="-fx-border-color: #30336b; -fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10;">
                                    <font><Font size="18.0"/></font>
                                </TextField>

                                <!-- Password (stacked with plain text mirror + eye icon) -->
                                <StackPane maxWidth="400.0" prefHeight="50.0">
                                    <!-- Hidden password -->
                                    <PasswordField fx:id="passwordField" onKeyReleased="#onLog"
                                                   prefHeight="50.0" prefWidth="300.0" promptText="Password"
                                                   style="-fx-border-color: #30336b; -fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 0 40 0 10;">
                                        <font><Font size="18.0"/></font>
                                    </PasswordField>

                                    <!-- Visible mirror (controller toggles visibility) -->
                                    <TextField fx:id="passwordFieldVisible" onKeyReleased="#onLog"
                                               visible="false" managed="false"
                                               prefHeight="50.0" prefWidth="300.0" promptText="Password"
                                               style="-fx-border-color: #30336b; -fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 0 40 0 10;">
                                        <font><Font size="18.0"/></font>
                                    </TextField>

                                    <!-- Eye icon -->
                                    <ImageView fx:id="showPassword" fitHeight="18.0" fitWidth="24.0"
                                               pickOnBounds="true" preserveRatio="true"
                                               onMouseClicked="#ShowPasswordOnAction"
                                               StackPane.alignment="CENTER_RIGHT">
                                        <image><Image url="@../images/eye.png"/></image>
                                        <StackPane.margin><Insets right="12"/></StackPane.margin>
                                    </ImageView>
                                </StackPane>
                            </children>
                        </VBox>

                        <!-- Forgot password link -->
                        <HBox alignment="CENTER_RIGHT" maxWidth="359.0" prefHeight="31.0" prefWidth="359.0">
                            <children>
                                <Hyperlink onMouseClicked="#forgotPasswordOnAction" text="Forgot your password?">
                                    <font><Font size="18.0"/></font>
                                </Hyperlink>
                            </children>
                        </HBox>

                        <!-- Login button -->
                        <Button fx:id="loginButton" onAction="#onLogin" prefHeight="40.0" prefWidth="300"
                                style="-fx-background-color: #000032; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"
                                text="LOGIN">
                            <font><Font size="18.0"/></font>
                        </Button>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
