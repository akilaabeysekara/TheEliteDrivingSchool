<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #d2dae2;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.elite.controller.CoursesPageController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10.0"
                  style="-fx-background-color: #00003E; -fx-background-radius: 5;">
                <Label text="Course Management" style="-fx-text-fill: white; -fx-padding: 15;">
                    <font><Font name="System Bold" size="24.0"/></font>
                </Label>
            </HBox>

            <!-- Form -->
            <GridPane hgap="15" vgap="15"
                      style="-fx-padding: 20; -fx-background-color: rgba(216,216,255,0.88);
                             -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <columnConstraints>
                    <ColumnConstraints minWidth="150.0" hgrow="NEVER"/>
                    <ColumnConstraints minWidth="0.0" prefWidth="0.0" hgrow="NEVER"/>
                    <ColumnConstraints minWidth="156.0" prefWidth="380.0" hgrow="ALWAYS"/>
                    <ColumnConstraints minWidth="156.0" prefWidth="245.0" hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                </rowConstraints>

                <Label text="Course ID:" GridPane.rowIndex="0"/>
                <Label fx:id="lblId" text="C1001"
                       style="-fx-border-color: #dcdde1; -fx-border-radius: 3; -fx-padding: 5;"
                       GridPane.columnIndex="2"/>

                <Label text="Course Name:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtName"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                  -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                <Label text="Duration:" GridPane.rowIndex="2"/>
                <TextField fx:id="txtDuration"
                           promptText="e.g. 12 weeks / 3 months"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                  -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                <Label text="Fee (LKR):" GridPane.rowIndex="3"/>
                <TextField fx:id="txtFee"
                           promptText="e.g. 50000 or 50000.00"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                                  -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            </GridPane>

            <!-- Actions -->
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 0 10 0;">
                <Button fx:id="btnSave"   text="Save"   onAction="#btnCourseSaveOnAction"
                        prefWidth="130.0" style="-fx-background-color: #4cd137; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
                <Button fx:id="btnUpdate" text="Update" onAction="#btnCourseUpdateOnAction"
                        prefWidth="130.0" style="-fx-background-color: #0097e6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
                <Button fx:id="btnDelete" text="Delete" onAction="#btnCourseDeleteOnAction"
                        prefWidth="130.0" style="-fx-background-color: #e55039; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
                <Button fx:id="btnReset"  text="Reset"  onAction="#btnCourseResetOnAction"
                        prefWidth="130.0" style="-fx-background-color: #f6b93b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;"/>
            </HBox>

            <!-- Table -->
            <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 5;
                                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <TableView fx:id="tblCourse" onMouseClicked="#onClickTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId"       text="Course ID"        style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colName"     text="Course Name"      style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colDuration" text="Duration"         style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colFee"      text="Fee (LKR)"        style="-fx-alignment: CENTER_RIGHT;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
