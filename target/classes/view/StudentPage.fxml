<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #d2dae2;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.elite.controller.StudentPageController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="10.0"
                  style="-fx-background-color: #00003E; -fx-background-radius: 5;">
                <Label style="-fx-text-fill: white; -fx-padding: 15;" text="Student Management">
                    <font><Font name="System Bold" size="24.0"/></font>
                </Label>
            </HBox>

            <!-- Form Section -->
            <GridPane hgap="15" vgap="15"
                      style="-fx-padding: 20; -fx-background-color: rgba(216,216,255,0.88);
                          -fx-background-radius: 5;
                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

                <columnConstraints>
                    <ColumnConstraints minWidth="150.0"/>
                    <ColumnConstraints prefWidth="380.0" hgrow="ALWAYS"/>
                    <ColumnConstraints prefWidth="245.0" hgrow="ALWAYS"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                    <RowConstraints minHeight="35.0"/>
                </rowConstraints>

                <!-- Student ID -->
                <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <Label fx:id="lblId" text="S001"
                       style="-fx-border-color: #dcdde1; -fx-border-radius: 3; -fx-padding: 5;"
                       GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font><Font name="Segoe UI" size="14.0"/></font>
                </Label>

                <!-- Name -->
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtName"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                              -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- NIC -->
                <Label text="Nic:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtNic"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                              -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Email -->
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtEmail"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                              -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- Phone -->
                <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtPhone"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                              -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Address -->
                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <font><Font name="Segoe UI Semibold" size="14.0"/></font>
                </Label>
                <TextField fx:id="txtAddress"
                           style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88);
                              -fx-border-width: 0 0 2 0; -fx-border-color: black;"
                           GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>

            <!-- Button Panel -->
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 0 10 0;">
                <Button fx:id="btnSave" text="Save" onAction="#btnStudentSaveOnAction"
                        prefWidth="130.0"
                        style="-fx-background-color: #4cd137; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
                <Button fx:id="btnUpdate" text="Update" onAction="#btnStudentUpdateOnAction"
                        prefWidth="130.0"
                        style="-fx-background-color: #0097e6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
                <Button fx:id="btnDelete" text="Delete" onAction="#btnStudentDeleteOnAction"
                        prefWidth="130.0"
                        style="-fx-background-color: #e55039; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
                <Button fx:id="btnReset" text="Reset" onAction="#btnStudentResetOnAction"
                        prefWidth="130.0"
                        style="-fx-background-color: #f6b93b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;">
                    <font><Font size="13.0"/></font>
                </Button>
            </HBox>

            <!-- Table Section -->
            <VBox spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 5;
                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <TableView fx:id="tblCustomer" onMouseClicked="#onClickTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId"       text="Student ID" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colName"     text="Name"       style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colNic"      text="NIC"        style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colEmail"    text="Email"      style="-fx-alignment: CENTER_LEFT;"/>
                        <TableColumn fx:id="colPhone"    text="Phone"      style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colAddress"  text="Address"    style="-fx-alignment: CENTER_LEFT;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
